<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="?android:textColorPrimary" android:shape="rectangle">
            <size android:height="12.0dip" />
            <solid android:color="#33000000" />
            <corners android:radius="24.0dip" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:tint="?android:colorControlActivated" android:shape="rectangle">
                        <size android:height="12.0dip" />
                        <solid android:color="#59000000" />
                        <corners android:radius="24.0dip" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress" android:left="4.0dip" android:top="3.0dip" android:right="4.0dip" android:bottom="3.0dip">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:shape="rectangle">
                        <size android:height="6.0dip" />
                        <gradient android:startColor="@android:color/system_accent1_600" android:endColor="@android:color/system_accent1_300" android:angle="0.0" />
                        <corners android:radius="24.0dip" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>